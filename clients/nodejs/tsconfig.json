{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["dom"],
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "services", 
    "services/shared/types", 
    "services/shared/utils/app.constants.ts", 
    "services/shared/auth.ts", 
    "services/shared/nunjucks.ts", 
    "services/camelid-directory/index.ts", 
    "services/llama-ledger/index.ts",
    "services/alpaca-tracker/index.ts",
    "services/dromedary-directory/index.ts",
    "public"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
