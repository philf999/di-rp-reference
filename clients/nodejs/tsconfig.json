{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["dom"],
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
