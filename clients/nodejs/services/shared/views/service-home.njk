{% extends "template.njk" %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  <div class="govuk-width-container ">
    <main class="govuk-main-wrapper">

      <h1 class="govuk-heading-l">You are logged in to {{ serviceHeading }}</h1>
      <p class="govuk-body">
        {{ serviceIntroMessage | safe }}
      </p>

      <h1 class="govuk-heading-l">Access Token</h1>
      <pre>{{result.accessToken}}</pre>

      <h1 class="govuk-heading-l">ID Token</h1>
      <pre>{{result.idToken}}</pre>

      <h1 class="govuk-heading-l">User Info</h1>
      <pre><code>{{result.userinfo}}</code></pre>

      <h1 class="govuk-heading-l">Core Identity Claim</h1>
      {% if result.coreIdentity %}
      <pre>{{result.coreIdentity}}</pre>
      {% else %}
      <p class="govuk-body-l">None</p>
      {% endif %}
      
      {{ govukButton({
        text: "Logout",
        href: "logout"
      }) }}

    </div>
  </main>
</div>
{% endblock %}